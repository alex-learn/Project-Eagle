<div data-role="page" data-theme="a" data-cache="never">
  
  <div data-role="header" data-id="header_top" data-tap-toggle="false"   data-transition="none" data-fullscreen="true"  data-backbtn="true">
    <h1><%= @app.course.name %></h1>
    <a data-icon="back" data-transition="reverse slide" href="<%= @app.get_url('',{}) %>">Back</a>
  </div>
  <div class="content">

	<ul>
	  <% @times.each do |i| %>
	  	<% @time12hr = Time.parse(i['t']) %>
	    <% @timeview = @time12hr.strftime("%I:%M") %>
		<% @time24hr = @time12hr.strftime("%H:%M") %>
	    <% if i['q'].to_i > 1 %>
	      <li>
	      	<a href="<%= @app.get_url('',{:time=>@time24hr}) %>" data-transition="slide"><span class="title"><%=@timeview%></span><span class ="disclosure_indicator"></span></a>
	      	<img border="0" width="26px;" height="18px;" style="float:right;margin-top:-58px;padding:10px 40px 0 0;" src="/images/iphone/icons/<%= i['q'] %>_bubble.png"/>
	      </li>
	    <% else %>
	      <li>
		  	<div style="min-height:80px;display:block;"><span class="title"><font color="#D8D8D8"><%=@timeview%></font></span></div>
	      </li>
	    <% end %>
	  <% end %>
  	</ul>
	<div data-role="footer" data-id="footer_bottom" data-tap-toggle="false"  data-transition="none" data-fullscreen="true"  data-theme="a" data-position="fixed">		
		<div data-role="navbar" data-theme="a">
				<ul>
					<li><a class="ui-btn-active" href="#">Tee Times</a></li>
					<li><a href="#">Reservations</a></li>
					<li><a href="#">About Us</a></li>
				</ul>
			</div><!-- /navbar -->
	</div><!-- /footer -->
</div>